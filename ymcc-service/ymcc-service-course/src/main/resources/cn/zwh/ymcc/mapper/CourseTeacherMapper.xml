<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zwh.ymcc.mapper.CourseTeacherMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.zwh.ymcc.domain.CourseTeacher">
        <id column="id" property="id" />
        <result column="teacher_id" property="teacherId" />
        <result column="course_id" property="courseId" />
    </resultMap>


    <select id="selectTeachersByCourseId" resultType="cn.zwh.ymcc.domain.Teacher">
        select
            t.id,
            t.name,
            t.intro,
            t.technology,
            t.position,
            t.head_img headImg,
            t.tags
        from t_course_teacher ct
        inner join t_teacher t
        on ct.teacher_id = t.id
        where ct.course_id = #{courseId}
    </select>

</mapper>
